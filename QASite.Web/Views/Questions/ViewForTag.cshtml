@model TagViewModel

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var question in Model.Questions)
        {
            <tr>
                <td>
                    <a href="/questions/viewquestion?id=@question.Id">
                        @question.Title
                    </a>
                </td>
                <td>@question.Text</td>
                <td>
                    @String.Join(", ", question.QuestionTags.Select(q => q.Tag.Name))
                </td>
            </tr>
        }
    </tbody>
</table>